<%= link_to 'Back', posts_path %>

<%= form_with model: @chat do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
    <%= f.submit %>
<% end %>
<table>
    <thead>
        <tr>
            <td>投稿者名</td>
            <td>投稿内容</td>
        </tr>
    </thead>
    <tbody>
        <% @chats.each do |chat| %>
            <tr>
                <td><a href="/users/<%= chat.user.id %>">
                 <%= chat.user.nickname %></td>
                <td><%= chat.message %></td>
            </tr>
        <% end %>
    </tbody>
</table>