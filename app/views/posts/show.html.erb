<p id="notice"><%= notice %></p>

<%= "いいよね！"%><% if Like.find_by(user_id: current_user.id, post_id: @post.id) %>
    <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
        <span class="fa fa-heart like-btn-unlike"></span>
    <% end %>
<% else %>
    <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
       <span class="fa fa-heart like-btn"></span>
    <% end %>
<% end %>
<%= @likes_count %><br>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>カテゴリー:</strong>
  <%= @post.category.name %>
</p>

<p>
  <strong>販売区分:</strong>
  <%= @post.pay_id %>
</p>

<p>
  <strong>価格:</strong>
  <%= @post.price %>
</p>

<p>
  <strong>投稿者:</strong>
  <%= @post.user.nickname %>
</p>

<p>
  <strong>内容詳細:</strong>
  <%= @post.content %>
</p>

<%= link_to '編集', edit_post_path(@post.id) %> |
<%= link_to '戻る', posts_path %>
<%= link_to 'みなさんのご意見お聞かせ下さい', post_evaluations_path(@post.id)%>
<%= link_to 'この投稿に対する評価一覧', evaluation_path(@post.id)%>
