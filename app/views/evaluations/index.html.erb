            <%= f.radio_button :second_id, 5 %>
            <label for="evaluation_second_id_5">要改善</label>
          </div>
         </div> 

         <div class='questions-field'>
          <div class='fields-label'>
          <%= "質問③: "%><%=@post.number3 %><br>
            <%= f.radio_button :third_id, 1 %>
